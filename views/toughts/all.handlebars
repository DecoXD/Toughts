<div class="home-section">
        <h1 class="t-center f-big">Toughts</h1>
    <div class="search-container">
        <form action="/" method="get" class="search-form">
            <input class="g-input" type="text" name="search" placeholder="EstÃ¡ buscando algo?">
            <input class="g-btn" type="submit" class="btn" value="Buscar" >
        </form>
    </div>

    <div class="filter">
       
            <form action="/" method="get">
                <input type="hidden" name="search" value="{{this.search}}">
                <input type="hidden" name="order" value="new">
                <button type="submit"><i class="bi bi-arrow-up f-small-16"></i></button>
            </form>
            <form action="/" method="get">
                <input type="hidden" name="search" value="{{this.search}}">
                <input type="hidden" name="order" value="old">
                <button type="submit" > <i class="bi bi-arrow-down f-small-16"></i></button>
            </form>
            <a href="/"> <i class="bi bi-arrow-clockwise f-small-16"></i></a>
   
    </div>
    
    {{#if search}}
        <p>resultados encontrados para '{{search}}' : {{toughtList.length}}</p>
    {{/if }}
    {{#each toughtList}}
    <figure class="tought-container">
        <blockquote class="f-big">{{this.title}}</blockquote>
        <figcaption class="f-small">created by: <span class="f-bold">{{this.author}}</span></figcaption>
    </figure>
    {{/each}}
</div>