<div class="full-center">
    <div class="section-temp f-small-16 ">
        <h2 class="f-bold t-center f-big">REGISTER</h2>
        <form action="/register" method="post" class="auth-form">
            <div class="form-controller">
                <label class="auth-label">
                    <span>name</span>
                    <input class="g-input" type="text" name="name" placeholder="digite seu nome aqui" required>
                </label>
            </div>
            <div class="form-controller">
                <label class="auth-label">
                    <span>login</span>
                    <input class="g-input" type="text" name="login" placeholder="digite o login desejado" required>
                </label>
            </div>
            <div class="form-controller">
                <label class="auth-label">
                    <span>password</span>
                    <input class="g-input" type="password" name="password" placeholder="digite sua senha" required>
                </label>
            <div class="form-controller">
                <label class="auth-label" >
                    <span>confirm password</span>
                    <input class="g-input" type="password" name="confirmPassword" placeholder="confirme sua senha" required>
                </label>
            </div>
            <input type="submit" value="register" class="g-btn auth-btn">
        </form>
        {{#if messages.message}}
        <p class="error-msg">{{messages.message}}</p>
        {{/if }}
        <p>ja possui uma conta ? <span><a href="/login"> Clique aqui</a></span></p>
    </div>
</div>